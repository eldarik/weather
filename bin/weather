#!/usr/bin/env ruby

require "bundler/setup"
require "weather"
require "optparse"

location = ARGV[-1]
options = {}
options_parser = nil

OptionParser.new do |op|
  op.banner = "Usage: weather [options] location(required)"

  op.on(
    "--service SERVICE (required) avaibale services: #{Weather::Cli.available_services.join(', ')}"
  ) do |o|
    options[:service] = o
  end

  op.on("-h", "--help", "print this help message.") do |h|
    puts op
    exit
  end

  op.on("--version", "show weather version") do |ver|
    puts "version: #{Weather::VERSION}"
    exit
  end

  options_parser = op
end.parse!

unless location
  puts options_parser
  exit
end

if options.empty?
  puts options_parser
  exit
end

Weather::Cli::Cli.new(options[:service]).start(location)
